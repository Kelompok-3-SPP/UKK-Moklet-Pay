<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".data.DataSiswa">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/Judul"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Data Siswa"
        android:textColor="#EC1515"
        android:textSize="24dp"
        android:textAlignment="center"
        android:paddingTop="32dp"
        android:fontFamily="@font/bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:focusableInTouchMode="true"
        android:textColorHint="#c1c2c4"
        app:boxBackgroundColor="#E9E9E9"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_btn_search"
            android:drawablePadding="23dp"
            android:drawableTint="#BDBDBD"
            android:focusableInTouchMode="true"
            android:hint="Search place or souvenirs"
            android:imeOptions="actionSearch"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:singleLine="true"
            android:fontFamily="@font/reguler"/>
    </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDatasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:overScrollMode="never"
        android:layout_marginTop="140dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/container_data_siswa" >

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/btn_add_spp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_border"
        android:src="@drawable/ic_add1" />


</RelativeLayout>