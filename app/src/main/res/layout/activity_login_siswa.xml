<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.LoginSiswaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:background="@drawable/ic_bg_header_login_siswa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="52dp"
                android:text="Hello!"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                android:fontFamily="@font/medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="94dp"
                android:text="Welcome to"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/medium"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:fontFamily="@font/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="137dp"
                android:text="MokletPay"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_siswa"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="84dp"
                android:focusableInTouchMode="true"
                android:textColorHint="#978B8B"
                app:boxBackgroundColor="#F7F5F4"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:drawablePadding="23dp"
                    android:drawableTint="#BDBDBD"
                    android:focusableInTouchMode="true"
                    android:hint="Username"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingStart="32dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:fontFamily="@font/medium"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_siswa"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="164dp"
                android:focusableInTouchMode="true"
                android:textColorHint="#978B8B"
                app:boxBackgroundColor="#F7F5F4"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#E42F45">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:drawablePadding="23dp"
                    android:drawableTint="#BDBDBD"
                    android:focusableInTouchMode="true"
                    android:hint="Password"
                    android:imeOptions="actionSend"
                    android:inputType="textPassword"
                    android:paddingStart="32dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:singleLine="true"
                    android:fontFamily="@font/medium"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/login_siswa"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_marginTop="268dp"
                android:background="@drawable/bg_btn_login"
                android:text="Log In"
                android:textAllCaps="false"
                android:fontFamily="@font/bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.573"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/login_siswa" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</ScrollView>