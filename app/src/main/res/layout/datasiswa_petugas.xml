<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SubSiswaPetugas">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/Judul"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Data Siswa"
        android:textColor="#EC1515"
        android:textSize="24dp"
        android:textAlignment="center"
        android:paddingTop="32dp"
        android:fontFamily="@font/bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:focusableInTouchMode="true"
        android:textColorHint="#c1c2c4"
        app:boxBackgroundColor="#E9E9E9"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_btn_search"
            android:drawablePadding="23dp"
            android:drawableTint="#BDBDBD"
            android:focusableInTouchMode="true"
            android:hint="Search Siswa"
            android:imeOptions="actionSearch"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:singleLine="true"
            android:fontFamily="@font/reguler"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDatasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        android:overScrollMode="never"

        app:layout_constraintTop_toBottomOf="@+id/search_bar"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/container_datasiswa_petugas"
        >

    </androidx.recyclerview.widget.RecyclerView>


</FrameLayout>