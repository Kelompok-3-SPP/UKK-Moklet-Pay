<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="331dp"
    android:layout_height="313dp"
    android:background="@drawable/custom_dialog_background"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/kurang_bayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bold"
        android:text="Kurang Pembayaran"
        android:textColor="#4D444B"
        android:textSize="16sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_kurang_bayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kurang_bayar"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#978B8B"
        app:boxBackgroundColor="#F7F5F4"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="285dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:drawableTint="#BDBDBD"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/medium"
            android:hint="Rp.0-"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingStart="32dp"
            android:paddingBottom="15dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_kurang_bayar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/bold"
        android:text="Simpan"
        android:textSize="15sp" />

</RelativeLayout>